# Environment variables for RAG Chatbot API

# Qdrant Configuration
# Set to "true" to use in-memory storage (free tier, data resets on restart)
# Set to "false" to use Qdrant Cloud (requires QDRANT_URL and QDRANT_API_KEY)
LOCAL_QDRANT=true

# Qdrant Cloud Configuration (only needed if LOCAL_QDRANT=false)
# QDRANT_URL=
# QDRANT_API_KEY=

# Database Configuration (optional)
# NEON_DB_URL=

# OpenAI Configuration (optional, for enhanced responses)
# OPENAI_API_KEY=
{
  "skillId": "api-validator",
  "name": "API Validator",
  "description": "Validates API request/response schemas and ensures compliance with specifications",
  "category": "api",
  "triggers": ["file-change", "git-commit", "manual"],
  "parameters": {
    "required": ["api_spec_file"],
    "optional": {
      "validate_responses": true,
      "check_security": true,
      "performance_thresholds": {
        "max_response_time": 2000,
        "min_throughput": 100
      }
    }
  },
  "dependencies": [],
  "output": {
    "format": "json",
    "schema": {
      "type": "object",
      "properties": {
        "valid": {"type": "boolean"},
        "schema_compliance": {"type": "number"},
        "security_issues": {"type": "number"},
        "performance_issues": {"type": "number"},
        "recommendations": {"type": "array", "items": {"type": "string"}}
      }
    }
  },
  "implementation": {
    "type": "claude-task",
    "task_type": "api-validation",
    "script": "validate_api.py"
  }
}